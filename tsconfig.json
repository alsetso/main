{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./app/*"],
      "@ui/*": ["./packages/ui/*"],
      "@config/*": ["./packages/config/*"],
      "@motion/*": ["./packages/ui/motion/*"],
      "@alset/config/*": ["./packages/config/*"],
      "@alset/ui/*": ["./packages/ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "packages/**/*.ts", "packages/**/*.tsx"],
  "exclude": ["node_modules"]
}

